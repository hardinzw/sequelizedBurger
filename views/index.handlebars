<main class="container">

    <!--Eat-Da-Burger Header-->
    <div class="container mx-auto">
        <div class="row">
            <div class="col-12 text-center" id="title">
                <h1> Eat-Da-Burger! </h1>
                <img src="/assets/img/24-243353_hamburger.png" alt="burger">
            </div>
        </div>
    </div>

    <!--Burgers-->
    <div class="row" id="burgersDiv">

        <!--Burgers to Devour-->
        <div class="col-lg-8 text-center" id="burgerList">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="card col-6">
                <div class="text-center my-auto">
                    <div>
                        <p>{{this.id}}. {{this.burger_name}}</p>
                    </div>
                </div>
            </div>
            <div class="col-6 text-center">
                <form method="POST" action="/burgers/update?_method=PUT" id="devourer">
                    <input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
                    {{!-- enter eater name here --}}
                    <input class="my-1" type="text" name="eaten_by" placeholder="Eaten by"><br>
                    <button type="submit" class="btn btn-default" id="devourBtn">Devour it!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-4 text-center" class="task">
            {{!-- post eaten burgers here --}}
            {{#each burgers}}
            {{#if this.devoured}}
            <input class="form-control" type="text"
                placeholder="{{this.id}}. {{this.burger_name}}. Eaten by {{this.Customer.dataValues.customer_name}}"
                readonly>
            {{!-- include name of eater --}}
            {{/if}}
            {{/each}}
        </div>
    </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 text-center enter_section">
                <form action="/burgers/create" method="POST">
                    {{!-- enter burger name here --}}
                    <p>Enter a burger you want to eat and click the "Submit" button.</p>
                    <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                    <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</main>